@{
    ViewData["Title"] = "Kalendář";
}
@model kalendar.Models.Udalost


<div class="container-lg">
  <div class="row">
    <div class="col-4">
      <div class="text-center">
            <ul class="list-group list-group-horizontal d-inline-flex mb-5">
              <li class="list-group-item">Události</li>
              <li class="list-group-item">Upomínky</li>
              <li class="list-group-item">Poznámky</li>
            </ul>
            <div id="kocourek"></div>
      </div>
    </div>
    <div class="col-8">
      <div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
               
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="closemodal" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>

<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.print.css" rel="stylesheet" media="print"/>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            var events = [];
            $.ajax({
                type: "GET",
                url: "/api/udalost",
                success: function (data) {
                    $.each(data, function (i, v) {
                        events.push({
                            title: v.nazev,
                            start: v.datum,
                        });
                        var d = new Date(v.datum);
                        d = d.toLocaleString();
                        var n = document.createElement("h4"); 
                        n.innerHTML = v.nazev;
                        var dat = document.createElement("p"); 
                        dat.innerHTML = d;
                        var div = document.createElement("div"); 
                        div.className = 'udalost';
                        var documentFragment = document.createDocumentFragment();
                        documentFragment.appendChild(div);
                        div.appendChild(n);
                        div.appendChild(dat);
                        $("#kocourek").append(div);
                    })
                    
                    GenerateCalendar(events);
                },
                error: function (error) {
                    alert('failed');
                }
            })

            $('#closemodal').click(function() {
                $('#myModal').modal('hide');
            });

            function GenerateCalendar(events) {
                $('#calender').fullCalendar('destroy');
                $('#calender').fullCalendar({
                    timeZone: 'UTC',
                    contentHeight: 500,
                    defaultDate: new Date(),
                    timeZone: 'local',
                    timeFormat: 'H:mm',
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay,agenda'
                    },
                    eventLimit: true,
                    eventColor: '#378006',
                    events: events,
                    eventClick: function (calEvent, jsEvent, view) {   
                        $('#eventTitle').text(calEvent.title);
                        var $description = $('<div/>');
                        $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MMM-YYYY HH:mm a")));
                        //$description.append($('<p/>').html('<b>Description:</b>' + calEvent.popisek));
                        $('#myModal #pDetails').empty().html($description);

                        //close button ma fungovat
                        $('#myModal').modal('show');
                    }
                })
            }
        })
    </script>
}
    </div>
  </div>
</div>
